<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>EMPLOYEESERVLET</servlet-name>
    <servlet-class>com.wicore.empser.AddNewEmployeeDB</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EMPSERVLET</servlet-name>
    <servlet-class>com.wicore.empser.ViewEmployeeDB</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>EDITSERVLET</servlet-name>
    <servlet-class>com.wicore.empser.EditForm</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EMPLOYEESERVLET</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EMPSERVLET</servlet-name>
    <url-pattern>/view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EDITSERVLET</servlet-name>
    <url-pattern>/empform</url-pattern>
  </servlet-mapping>
</web-app>